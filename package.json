{
  "name": "deeplx",
  "version": "0.1.3",
  "type": "module",
  "description": "An unofficial Node package to translate text using [DeepL](https://www.deepl.com).",
  "repository": "https://github.com/un-ts/deeplx.git",
  "author": "JounQin <admin@1stg.me> (https://www.1stG.me)",
  "funding": "https://opencollective.com/deeplx",
  "license": "MIT",
  "packageManager": "yarn@4.8.1",
  "engines": {
    "node": ">=14.8"
  },
  "bin": "./lib/cli.js",
  "main": "./lib/index.cjs",
  "types": "./lib/index.d.ts",
  "module": "./lib/index.js",
  "exports": {
    "import": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "module-sync": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "require": {
      "types": "./index.d.cts",
      "default": "./lib/index.cjs"
    }
  },
  "files": [
    "index.d.cts",
    "lib"
  ],
  "keywords": [
    "deepl",
    "deepl-api",
    "deepl-free",
    "deeplx",
    "deepl-translate",
    "deepl-translation",
    "deepl-translator",
    "translate",
    "translate-api",
    "translator"
  ],
  "scripts": {
    "build": "run-p 'build:*'",
    "build:r": "r -f cjs",
    "build:tsc": "tsc -p tsconfig.lib.json",
    "format": "prettier --write .",
    "lint": "run-p 'lint:*'",
    "lint:es": "eslint . --cache --max-warnings 10",
    "lint:tsc": "tsc --noEmit",
    "prepare": "simple-git-hooks && yarn-berry-deduplicate || exit 0",
    "release": "yarn build && clean-pkg-json && changeset publish",
    "test": "vitest run",
    "typecov": "type-coverage",
    "vercel-build": "yarn build && tsx scripts/build"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "node-fetch": "^3.3.2",
    "tslib": "^2.8.1",
    "x-fetch": "^0.2.4"
  },
  "devDependencies": {
    "@1stg/common-config": "^12.0.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.0",
    "@octokit/request": "^9.2.2",
    "@pkgr/rollup": "^6.0.2",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/web": "^0.0.216",
    "@vitest/coverage-istanbul": "^3.1.1",
    "clean-pkg-json": "^1.2.1",
    "eslint": "^9.24.0",
    "lint-staged": "^15.5.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.12.1",
    "size-limit": "^11.2.0",
    "tsx": "^4.19.3",
    "type-coverage": "^2.29.7",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1",
    "yarn-berry-deduplicate": "^6.1.1"
  },
  "resolutions": {
    "es5-ext": "npm:@unes/es5-ext@latest",
    "prettier": "^3.5.3"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
