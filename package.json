{
  "name": "deeplx",
  "version": "0.1.3",
  "type": "module",
  "description": "An unofficial Node package to translate text using [DeepL](https://www.deepl.com).",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "packageManager": "pnpm@8.12.1",
  "engines": {
    "node": ">=14.8"
  },
  "bin": {
    "deeplx": "./lib/cli.js"
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "exports": {
    "types": "./lib/index.d.ts",
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "keywords": [
    "deepl",
    "deepl-api",
    "deepl-free",
    "deeplx",
    "deepl-translate",
    "deepl-translation",
    "deepl-translator",
    "translate",
    "translate-api",
    "translator"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -f esm",
    "build:tsc": "tsc -p tsconfig.lib.json",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache --max-warnings 10",
    "lint:tsc": "tsc --noEmit",
    "postbuild:r": "cp lib/index.esm.mjs api/_deeplx.js",
    "prepare": "simple-git-hooks || exit 0",
    "prerelease": "pnpm build",
    "release": "changeset publish",
    "test": "vitest run --coverage",
    "typecov": "type-coverage",
    "vercel-build": "pnpm build && tsx scripts/build"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "node-fetch": "^3.3.2",
    "tslib": "^2.6.2",
    "x-fetch": "^0.1.3"
  },
  "devDependencies": {
    "@1stg/lib-config": "^12.0.1",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@octokit/request": "^8.1.6",
    "@types/web": "^0.0.127",
    "@vitest/coverage-istanbul": "^1.0.4",
    "tsx": "^4.6.2",
    "type-coverage": "^2.27.0",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.2",
    "vercel": "^32.7.2",
    "vitest": "^1.0.4"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
